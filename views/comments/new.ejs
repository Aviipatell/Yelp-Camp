<%- include("../partials/header") %>

	<div class = "row">

		<h1 style = "text-align: center;">Add New Comment to <%=campground.name%></h1>
		<div style = "width: 40%; margin: 30px auto;">
			<form method = "POST" action = "/campgrounds/<%=campground._id%>/comments">
				
				<div class = "form-group">
					<input class = "form-control" name = "comment[text]" type = "text" placeholder = "text">
				</div>	
				
				<!-- <div class = "form-group"> -->
				
				<div class = "form-group">
				<button class = "btn btn-block btn-primary btn-lg btn-default">Submit!</button>
				</div>
				
			</form>
		<a href = "/campgrounds/">Go Back</a>
		</div>
		
	</div>
	
