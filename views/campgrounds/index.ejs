	<header class = "jumbotron">
		<div class = "container">
			<h1>Welcome to YelpCamp</h1>
			<p>View our hand-picked campgrounds from all over the world!</p>
			<p>
				<a class = "btn btn-primary btn-large" href = "/campgrounds/new">Add new Campground</a>
			</p>
			<p>
				<form action = "/campgrounds" method = "GET" class = "form-inline">
					<div class = "form-group">
						<input class = "form-control" type = "text" name = "search" placeholder = "Campground Search..">
						<input class = "btn btn-default" type = "submit" value = "Search">
					</div>
				</form>
			</p>
		</div>
	</header>

	<div class = "row">
		<div class = "col-lg-12">
			<h3>Our Most Popular Campgrounds</h3>
		</div>
	</div>

	<div class = "row text-center" style = "">
	<% for (var i = 0; i < campgrounds.length; i++){ %>
		<div class = "col-md-3 col-sm-6">
			<div class = "thumbnail">
				<img src = "<%=campgrounds[i].image%>">
				<div class = "caption">
					<h4><%=campgrounds[i].name%></h4>
				</div>
				<p>
					<a href = "/campgrounds/<%=campgrounds[i]._id%>" class = "btn btn-primary">More Info</a>
				</p>
			</div>
		</div>
	<%}%>
	</div>

<%- include("../partials/footer") %>