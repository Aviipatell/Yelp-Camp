<%- include("../partials/header") %>

	<div class = "row">

		<h1 style = "text-align: center;">Create a New Campground</h1>
		<div style = "width: 40%; margin: 30px auto;">
			<!-- 	the multipart encytpe allows us to have that upload feature	 -->
			<form method = "POST" action = "/campgrounds" enctype = "multipart/form-data"> 
				
				<div class = "form-group">
					<input class = "form-control" name = "campground[name]" type = "text" placeholder = "name">
				</div>	
				
				<div class = "form-group">
					<input class = "form-control" name = "campground[price]" type = "number" placeholder = "price" min = "0.01" step = "0.01">
				</div>	
				
				<div class = "form-group">
				<!-- 	the accept makes it so that you cant accept non-image files		 -->
				<input class = "form-control" name = "image" type = "file" accept = "image/*" required>
				</div>

				<div class = "form-group">
				<input class = "form-control" name = "campground[description]" type = "text" placeholder = "description">
				</div>
				
				<div class = "form-group">
				<button class = "btn btn-block btn-primary btn-lg btn-default">Submit!</button>
				</div>
				
			</form>
		<a href = "/campgrounds/">Go Back</a>
		</div>
		
	</div>
	
<%- include("../partials/footer") %>